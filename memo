<script>
const stages = [
  "INITIALIZING","AUTHENTICATING","OPENING POKÉMON BOX","DECRYPTING RESEARCH DATA",
  "INDEXING SPECIMEN FILES","VALIDATING STORAGE","COMPILING ARCHIVE MANIFEST","FINALIZING"
];
const logs = [
  "Opening Pokémon Box…","Scanning storage crates…","Decrypting research data…",
  "Indexing specimen files…","Syncing field notes…","Rebuilding archive index…",
  "Consolidating metadata…","Tagging owner: WHITE…"
];

const stageEl=document.getElementById('stage');
const pctEl=document.getElementById('percent');
const barEl=document.getElementById('bar');
const logEls=[document.getElementById('log1'),document.getElementById('log2'),document.getElementById('log3')];

let pct=7, dir=1, step=0;
function tick(){
  pct += dir * (Math.random()*9 + 1);
  if(pct>=98){dir=-1; pct=98; step=(step+1)%stages.length; stageEl.textContent=stages[step]; rotateLogs();}
  if(pct<=8){dir=1; pct=8; rotateLogs();}
  pctEl.textContent=Math.round(pct)+"%";
  barEl.style.width=Math.round(pct)+"%";
}
function rotateLogs(){
  const next=logs[Math.floor(Math.random()*logs.length)];
  logEls[0].textContent=logEls[1].textContent;
  logEls[1].textContent=logEls[2].textContent.replace(/\s*▮?$/,'');
  logEls[2].innerHTML='&gt; '+next+' <span class="cursor"></span>';
}
setInterval(tick,500);
stageEl.textContent=stages[0];
</script>
